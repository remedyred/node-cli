{
	"name": "@snickbit/node-cli",
	"version": "3.0.1",
	"description": "Simple Node.js CLI framework for creating command line applications.",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"build:examples": "tsup examples/**/*.ts --outDir dist/examples --format cjs",
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"docs": "typedoc",
		"index": "indexer",
		"meta": "pnpm run prod --metafile",
		"prod": "pnpm run build --minify",
		"test": "jest",
		"watch": "pnpm run dev --watch",
		"watch:examples": "pnpm run build:examples --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-utilities": "^4.4.0",
		"@snickbit/out": "^2.0.36",
		"@snickbit/utilities": "^3.1.0",
		"lilconfig": "^2.0.5",
		"yargs-parser": "^21.0.1"
	},
	"devDependencies": {
		"@snickbit/indexer": "^2.5.5",
		"@types/jest": "^28.1.3",
		"@types/node": "^18.0.0",
		"jest": "^28.1.1",
		"shx": "^0.3.4",
		"ts-jest": "^28.0.5",
		"tsup": "^6.1.2",
		"typedoc": "^0.22.17",
		"typedoc-plugin-markdown": "^3.12.1",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"my-cli": {
		"src": "./src/cli.ts",
		"dest": "./dist/cli.js"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
