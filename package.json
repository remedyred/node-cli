{
	"name": "@snickbit/node-cli",
	"version": "3.0.24",
	"description": "Simple Node.js CLI framework for creating command line applications.",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify --dts",
		"build:examples": "tsup examples/**/*.ts --outDir dist/examples --format cjs",
		"clean": "shx rm -rf ./dist",
		"dev": "tsup",
		"dev:types": "tsc --project tsconfig.types.json",
		"docs": "typedoc",
		"index": "indexer",
		"test": "jest",
		"test:ci": "jest --ci --onlyChanged",
		"watch": "concurrently -k -c magenta,cyan pnpm:watch:*",
		"watch:dev": "pnpm run dev --watch",
		"watch:examples": "pnpm run build:examples --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-utilities": "4.7.2",
		"@snickbit/out": "2.0.48",
		"@snickbit/utilities": "3.8.2",
		"lilconfig": "2.1.0",
		"yargs-parser": "21.1.1"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.5.1",
		"@snickbit/indexer": "^2.7.1",
		"@snickbit/semantic-release": "^1.6.3",
		"@types/jest": "29.5.1",
		"@types/node": "18.15.11",
		"concurrently": "7.6.0",
		"eslint": "8.38.0",
		"jest": "28.1.3",
		"semantic-release": "^19.0.5",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"tsup": "6.7.0",
		"typedoc": "0.24.4",
		"typedoc-plugin-markdown": "3.15.1",
		"typescript": "4.9.5"
	},
	"engines": {
		"node": ">= 12"
	},
	"my-cli": {
		"src": "./src/cli.ts",
		"dest": "./dist/cli.js"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"onSuccess": "pnpm run dev:types",
		"format": [
			"esm",
			"cjs"
		]
	}
}
